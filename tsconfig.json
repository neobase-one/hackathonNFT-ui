{
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "~*": ["./src/*"]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    // strictNullChecks must be enabled for type inference to work for Yup
    "strictNullChecks": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "public",
    "**/*.spec.ts"
  ]
}
